@page "/documentos"

@inject IRepository repository



<h3>Documentos</h3>


@* @inject SweetAlertService sweetAlertService
 *@

@if (Imagenes is null)
{
    <div class="spinner" />
}
else
{
    <GenericList MyList="Imagenes">
        <Body>
            <div class="card">
                <div class="card-header">
                    <span>
                        <i class="oi oi-star"/> Documentos
                        <a class="btn btn-sm btn-primary float-end" href="/documentos/imageupload"><i class="oi oi-plus" /> Subir Imagen</a>
                    </span>
                </div>
                <div class="card-body">
                    <div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
                        <div>
                           
                        </div>
                        <div class="mx-1">
                           
                        </div>
                    </div>

                   

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Link</th>
                                <th style="width:200px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var image in Imagenes)
                            {
                                <tr>
                                    <td>
                                        @image.Name
                                    </td>
                                    <td>
                                        @image.Url
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </Body>
    </GenericList>
}

@code {

    public List<Image>? Imagenes { get; set; }



    protected async override Task OnInitializedAsync()
    {
        await LoadAsync();
    }



    private async Task LoadAsync()
    {

        var responseHppt = await repository.Get<List<Image>>("/api/imagenes/DevuelveImagenes");
       
        Imagenes = responseHppt.Response!;
     
       
    }
   
}
