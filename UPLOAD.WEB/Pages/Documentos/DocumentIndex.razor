@* @inject SweetAlertService sweetAlertService
 *@

@if (Imagenes is null)
{
    <Loading Label="Cargando Archivos..." />
}
else
{
    <GenericList MyList="Imagenes">
        <Body>
            <div class="card">
               @*  <div class="card-header">
                    <span>
                        <i class="oi oi-star"/> Documentos
                        <a class="btn btn-sm btn-primary float-end" href="/documentos/imageupload"><i class="oi oi-plus" /> Subir Imagen</a>
                    </span>
                </div> *@
                <div class="card-body">
                    <div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
                        <div>
                           
                        </div>
                        <div class="mx-1">
                           
                        </div>
                    </div>

                   

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Link</th>
                                <th>Obra Social</th>
                                <th>Periodo</th>
                                <th style="width:200px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var image in Imagenes)
                            {
                                <tr>
                                    <td>
                                        @image.Name
                                    </td>
                                    <td>
                                        @image.Url
                                    </td>
                                    <td>
                                        @image.ObraSocial
                                    </td>
                                   
                                    <td>
                                        @image.Periodo.ToString("dd-MM-yyyy")
                                    </td>
                                    <td>
                                        <a href="/document/edit/@image.Id" class="btn btn-warning">Editar</a>
                                        <button @onclick=@(()=>DeleteAsync(image)) class="btn btn-danger">Borrar</button>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </Body>
    </GenericList>
}

