@page "/clinicas"


@inject IRepository repository



<h3>Clinicas</h3>


@* @inject SweetAlertService sweetAlertService
 *@

@if (Clinicas is null)
{
    <div class="spinner" />
}
else
{
    <GenericList MyList="Clinicas">
        <Body>
            <div class="card">
                <div class="card-header">
                    <span>
                        <i class="oi oi-star"/> Clinicas
                        <a class="btn btn-sm btn-primary float-end" href="/clinicas/create"><i class="oi oi-plus"/> Nueva Clinica</a>
                    </span>
                </div>
                <div class="card-body">
                    <div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
                        <div>
                           
                        </div>
                        <div class="mx-1">
                           
                        </div>
                    </div>

                   

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Nro de Prestador</th>
                                <th style="width:200px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var clinica in Clinicas)
                            {
                                <tr>
                                    <td>
                                        @clinica.DENOMINACION
                                    </td>
                                    <td>
                                        @clinica.Id
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </Body>
    </GenericList>
}

@code {

    public List<Clinica>? Clinicas { get; set; }



    protected async override Task OnInitializedAsync()
    {
        await LoadAsync();
    }



    private async Task LoadAsync()
    {

        var responseHppt = await repository.Get<List<Clinica>>("/api/clinicas/DevuelveClinicas");
       
        Clinicas = responseHppt.Response!;
     
       
    }
   
}