@page "/clinicaspage"
@using UPLOAD.SHARE.Entities

<h3>Clinicas</h3>
@inject IRepository repository

@inject SweetAlertService sweetAlertService


@if (clinicas is null)
{
    <div class="spinner" />
}
else
{
    <GenericList MyList="clinicas">
        <Body>
            <div class="card">
                <div class="card-header">
                    <span>
                        <i class="oi oi-star"/> Clinicas
                        <a class="btn btn-sm btn-primary float-end" href="/clinicas/create"><i class="oi oi-plus"/> Nueva Clinica</a>
                    </span>
                </div>
                <div class="card-body">
                    <div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
                        <div>
                           
                        </div>
                        <div class="mx-1">
                           
                        </div>
                    </div>

                   

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                
                                <th style="width:200px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var clinica in clinicas)
                            {
                                <tr>
                                    <td>
                                        @clinica.DENOMINACION
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </Body>
    </GenericList>
}

@code {
   
    public List<Clinica>? clinicas { get; set; }

    

    protected async override Task OnInitializedAsync()
    {
        await LoadAsync();
    }

   

    private async Task LoadAsync()
    {
 
        var responseHppt = await repository.Get<List<Clinica>>("/api/clinicas/DevuelveClinicas");
             clinicas = responseHppt.Response!;
     
       
    }
   
}