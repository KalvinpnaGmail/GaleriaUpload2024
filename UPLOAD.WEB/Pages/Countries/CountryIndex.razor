@page "/countries"

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>
            <i class="bi bi-map"></i> Paises
        </span>
        <a class="btn btn-sm btn-primary" href="/countries/create"><i class="oi oi-plus"></i> Nuevo Pais</a>
    </div>
    <div class="card-body">
        <GenericList MyList="Countries">
            <Body>
                <Pagination CurrentPage="currentPage"
                            TotalPages="totalPages"
                            SelectedPage="SelectedPageAsync" />

                <div class="mb-2" style="display: flex; flex-wrap: wrap; align-items: center;">
                    <div></div>
                    <div class="mx-1"></div>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>País</th>
                            <th style="width:210px">Provincias</th>
                            <th style="width:210px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var country in Countries!)
                        {
                            <tr>
                                <td>@country.Name</td>
                                <td>@country.ProvinciaNumer</td>
                                <td>
                                    <a href="/countries/edit/@country.Id" class="btn btn-warning btn-sm">Editar</a>
                                    <a class="btn btn-info btn-sm" href="/countries/details/@country.Id">Detalles</a>
                                    <button @onclick=@(()=>DeleteAsync(country)) class="btn btn-danger btn-sm">Borrar</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
              
            </Body>
        </GenericList>
    </div>
</div>
