@page "/countries"



<GenericList MyList="Countries">
    <Body>
        <div class="card">
            <div class="card-header">
                <span>
                    <i class="bi bi-map" /> Paises
                    <a class="btn btn-sm btn-primary float-end" href="/countries/create"><i class="oi oi-plus" /> Nuevo Pais</a>

                </span>
            </div>
            <div class="card-body">
                <div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
                    <div>
                    </div>
                    <div class="mx-1">
                    </div>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>País</th>
                            <th>Provincias</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var country in Countries!)
                        {
                            <tr>
                                <td>
                                    @country.Name

                                </td>
                                <td>
                                    @country.ProvinciaNumer
                                </td>
                                <td>
                                    <a href="/countries/edit/@country.Id" class="btn btn-warning btn-sm">Editar</a>
                                    <a class="btn btn-info btn-sm" href="/countries/details/@country.Id">Detalles</a>
                                    <button @onclick=@(()=>DeleteAsync(country)) class="btn btn-danger btn-sm">Borrar</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </Body>
</GenericList>