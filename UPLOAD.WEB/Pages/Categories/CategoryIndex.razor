@page "/categories"

<h3>Listado de Categorias de Clinicas</h3>
<div class="mb-3">
    <a class="btn btn-primary mb-3" href="/category/create">Nueva Categoria</a>
</div>

<GenericList MyList="Categories">
    <Body>
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Categorias</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Categories!)
                {
                    <tr>
                        <td>
                            @category.Name
                            
                        </td>
                        <td>
                            <a href="/categories/edit/@category.Id" class="btn btn-warning">Editar</a>
                            <button @onclick=@(()=>DeleteAsync(category))  class="btn btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>