@page "/Login"

<MudPaper Class="mx-auto my-6 p-4" MaxWidth="400px">
    <MudText Typo="Typo.h5" Align="Align.Center">Login</MudText>
    <EditForm Model="loginDTO" OnValidSubmit="LoginAsync">
        <DataAnnotationsValidator />

        <MudForm>
            <MudTextField Label="Email" @bind-Value="loginDTO.Email" Variant="Variant.Filled" FullWidth="true" Required="true" />
            <ValidationMessage For="@(() => loginDTO.Email)" />

            <MudTextField Label="Contraseña" @bind-Value="loginDTO.Password" Variant="Variant.Filled" FullWidth="true" Required="true" InputType="InputType.Password" />
            <ValidationMessage For="@(() => loginDTO.Password)" />

            <MudButton Type="Submit" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Class="mt-4">
                Iniciar Sesión
            </MudButton>
        </MudForm>
    </EditForm>
</MudPaper>
