<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">UPLOAD.WEB</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/document">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Documentos
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/clinicas" @onclick="ToggleCategoriesSubMenu">
                <span class="bi bi-plus-hospital-fill-nav-menu" aria-hidden="true"></span> Clinicas

            </NavLink>
            <ul class="submenu" style="display: @(showCategoriesSubMenu ? "block" : "none")">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/categories">
                        <span class="bi bi-list-stars-fill-nav-menu" aria-hidden="true"></span> Categorías
                    </NavLink>
                </li>
            </ul>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/countries">
                <span class="bi bi-globe-americas-fill-nav-menu" aria-hidden="true"></span> Paises
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/categories">
                <span class="bi bi-list-stars-fill-nav-menu" aria-hidden="true"></span> Categorias Clinicas
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/mudnavmenu">
                <span class="bi bi-list-stars-fill-nav-menu" aria-hidden="true"></span> MenuMudBlazor
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool showCategoriesSubMenu = false;



    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        if (!collapseNavMenu)
        {
            showCategoriesSubMenu = false; // Oculta el submenú al cerrar el menú principal
        }


    }

    private void ToggleCategoriesSubMenu()
    {
        showCategoriesSubMenu = !showCategoriesSubMenu;
    }



}
